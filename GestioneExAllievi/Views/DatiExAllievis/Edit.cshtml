@model GestioneExAllievi.Models.DatiExAllievi

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="col-md-8">
        <h1>Modifica i tuoi dati</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodiceFiscale" class="control-label"></label>
                <input asp-for="CodiceFiscale" class="form-control" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indirizzo" class="control-label"></label>
                <input asp-for="Indirizzo" class="form-control" />
                <span asp-validation-for="Indirizzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumTelefono" class="control-label"></label>
                <input asp-for="NumTelefono" class="form-control" />
                <span asp-validation-for="NumTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia" class="control-label"></label>
                <select asp-for="SocialMedia" asp-items="@Html.GetEnumSelectList<SocialMediaType>()" class="form-control"></select>
                <span asp-validation-for="SocialMedia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsernamesSocialMedia" class="control-label"></label>
                <input asp-for="UsernamesSocialMedia" class="form-control" />
                <span asp-validation-for="UsernamesSocialMedia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitoloDiStudio" class="control-label"></label>
                <input asp-for="TitoloDiStudio" class="form-control" />
                <span asp-validation-for="TitoloDiStudio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specializzazione" class="control-label"></label>
                <input asp-for="Specializzazione" class="form-control" />
                <span asp-validation-for="Specializzazione" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FrequentaUniversita" /> Frequenti l'università?
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CercaLavoro" /> Stai cercando lavoro?
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EOccupato" /> Sei occupato?
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StipendioMensileAttuale" class="control-label"></label>
                <input asp-for="StipendioMensileAttuale" class="form-control"/>
                <span asp-validation-for="StipendioMensileAttuale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StipendioMensileRichiesto" class="control-label"></label>
                <input asp-for="StipendioMensileRichiesto" class="form-control"/>
                <span asp-validation-for="StipendioMensileRichiesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


